<Page
    x:Class="music_library_team2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:music_library_team2.Model"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ListView x:Name="GenrList" ItemsSource="{x:Bind Genres}" />
        <GridView
            Grid.Column="2"
            IsItemClickEnabled="True"
            ItemsSource="{x:Bind Musics}">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="data:Music">
                    <StackPanel>
                        <Image
                            Name="SoundImage"
                            Width="101"
                            Height="112"
                            Source="{x:Bind CoverPictureFilePath}" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="10,0,4,0" Text="Artist:" />
                            <TextBlock Text="{x:Bind Singer.FullName}" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="10,0,4,0" Text="Title:" />
                                <TextBlock Text="{x:Bind Title}" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>
